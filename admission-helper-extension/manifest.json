{
  "manifest_version": 3,
  "name": "Smart Admission & Hostel Assistant",
  "version": "2.0",
  "description": "Automate admission forms, track applications, visualize hostel availability, and improve UX.",
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "alarms",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://universityportal.edu/*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "128": "icon.png"
  }
}

